{% extends "base.jinja" %}

{% block subtitle %} - Login{% endblock %}

{% block header %}
  {% include "partials/header.jinja" %}
{% endblock %}

{% block content %}
  <main class="d-flex align-items-center justify-items-center justify-content-center w-100 vh-100">


    <form method="POST" class="p-5">
      {{ form.csrf_token }}
      <div class="form-check mt-3 px-0">

    {% with messages = get_flashed_messages() %}
      {% if messages %}
        <ul class=flashes>
          {% for message in messages %}
            <li>{{ message }}</li>
          {% endfor %}
        </ul>
      {% endif %}
    {% endwith %}

        {{ form.email.label(class="form-label text-primary") }}
        {{ form.email(class="form-control", placeholder="Type your email", size=30) }}
        {# TODO: Verificar se isso pode ser trocado por um macro, ou deve ser assim mesmo #}
        {% if form.email.errors %}
          <ul class="errors">
            {% for error in form.email.errors %}
              <li>error</li>
            {% endfor %}  
          </ul>
        {% endif %}
      </div>
      <div class="form-check mt-3 px-0">
        {{ form.password.label(class="form-label text-primary") }}
        {{ form.password(class="form-control", placeholder="Type your password", size=30) }}
        {% if form.password.errors %}
          <ul class="errors">
            {% for error in form.password.errors %}
              <li>error</li>
            {% endfor %}  
          </ul>
        {% endif %}
      </div>
      <div class="text-end pt-3">
        {{ form.submit(class="btn btn-primary") }}
      </div>
    </form>
  </main>
{% endblock %}

